<img src="/files/shoppingCart.jpg" style="max-block-size: 200px;">
<div className="descproducto">

    <form method="POST" action="/api/prod/add">
        <label for="title">Nombre del Producto</label>
        <input type="text" name="title">

        <label for="description">Descripción del Producto</label>
        <input type="text" name="description">

        <label for="price">Precio </label>
        <input type="number" name="price">

        <label for="stock">Stock actual</label>
        <input type="number" name="stock">

        <label for="category">Categoria</label>
        <select name="category">
            <option value="Category1">Categoria 1</option>
            <option value="Category2">Category 2</option>
            <option value="Category3">Category 3</option>
            <option value="Category4">Category 4</option>
        </select>

        <label for="thumbnails">Link de Miniatura </label>
        <input type="text" name="thumbnails">

        <label for="carru1">Link de imagen 1</label>
        <input type="text" name="carru1">

        <label for="carru2">Link de imagen 2</label>
        <input type="text" name="carru2">

        <label for="carru3">Link de imagen 3</label>
        <input type="text" name="carru3">

        <label for="availability">Disponibilidad</label>
      <div>
        <input type="radio" id="availability-true" name="availability" value="true">
        <label for="availability-true">Sí</label>

        <input type="radio" id="availability-false" name="availability" value="false">
        <label for="availability-false">No</label>
      </div>

        <button type="submit">Registrar producto</button>
    </form>

</div>

<a href="/"><h2>Volver al inicio</h2></a>

