<h1>PRODUCTOS</h1>
<div class="shop">
    {{#each products}}
        <div class="productos">
            <form action="/api/carts/add-to-cart/{{_id}}" method="post">
                <div class="infoCard">
                    <div class="textosprod">
                        <h2 class="productos__nombre">{{this.title}}</h2>
                        <div>
                            <h2 class="productos__precio">${{this.price}}</h2>
                        </div>
                        <input type="hidden" name="quantity" value="1"> <!-- Ajusta el valor segÃºn sea necesario -->

                        <button type="submit" class="add-to-cart-btn">Agregar al carrito</button>
                       <a href="/products/{{this._id}}">Ver detalles</a>
                    </div>
                </div>
            </form>
        </div>
    {{/each}}
</div>
